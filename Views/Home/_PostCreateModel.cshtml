@model web.ViewModels.Post.PostCreateModel

<div class="form-group">
    @Html.LabelFor(model => model.Caption)
    @Html.TextBoxFor(model => model.Caption, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(model => model.File)
    @Html.TextBoxFor(model => model.File, new { @class = "form-control-file", type = "file" })
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Upload</button>
</div>